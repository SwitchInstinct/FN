<script type="text/javascript">
    $(".volume-button-down").click(function(e) {

    	$("video").removeProp("muted");
    	$(this).hide();
    	$(".volume-button-up").show();

    });

    $(".volume-button-up").click(function(e) {

    	$("video").prop("muted", true);
    	$(this).hide();
    	$(".volume-button-down").show();

    });

    $("input").focus(function() {
        $("#overlay").css({
            background: 'rgba(0, 0, 0, 0.8)'
        });
    });

    $("input").blur(function() {
        $("#overlay").css({
            background: 'rgba(0, 0, 0, 0.5)'
        });
    });

    </script>
